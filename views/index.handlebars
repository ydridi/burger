<div class="container">

{{#each burgers}}
   		{{#if devoured}}
			<div class="row">
			   <div class="col hide">Some text here</div>
               <div class="col">{{burger_name}}</div>
       		</div>
        {{else}}
		 <div class="row">
            <div class="col alignText">{{burger_name}} &nbsp &nbsp <button class="devoured" data-id="{{id}}" data-newsleep="{{devoured}}">Devour Me!!!!
			</button></div>
        	<div class="col hide">Some text here</div>
		 </div>	
   		{{/if}}
  	{{/each}}
</div>	  
<br>
<br> 
<form class="create-form">
  	<div class="form-group">
    	<input type="text" id="ca" name="burger_name">
		<br>
    	
  		<button type="submit" class="mainBtn">submit</button>
  		<p class="specialFont" >Enter the burger you want to eat.<br>
    	                    Click the submit button when done.</p>
	</div>						
</form>